generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id         String      @id @default(cuid())
  name       String
  sex        Sex?
  email      String      @unique
  phone      String
  age        Int
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  screenings Screening[]
}

model Screening {
  id          String          @id @default(cuid())
  symptoms    String[]
  severity    Severity?
  status      ScreeningStatus
  medications String[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  patientId   String
  patient     Patient         @relation(fields: [patientId], references: [id])
  aiScreening String?
}

enum ScreeningStatus {
  PENDING
  REVIEWED
  APPROVED
  REJECTED
  FLAGGED
}

enum Sex {
  MALE
  FEMALE
  OTHER
}

enum Severity {
  LOW
  MEDIUM
  HIGH
}
